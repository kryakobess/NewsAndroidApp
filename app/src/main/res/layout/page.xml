<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_error"
            android:textStyle="bold"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/page_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content_error"
            android:layout_below="@id/page_title"
            android:textSize="11sp"
            android:textStyle="italic"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/page_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content_error"
            android:layout_below="@id/page_tags"
            android:textSize="11sp"
            android:textStyle="italic"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/page_creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content_error"
            android:layout_below="@id/page_country"
            android:textSize="15sp"
            android:textAlignment="center"
            />

        <ImageView
            android:id="@+id/page_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/page_creator"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/page_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content_error"
            android:layout_below="@id/page_image"
            android:textSize="20sp"
            />
    </RelativeLayout>
</ScrollView>